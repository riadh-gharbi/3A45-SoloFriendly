{% extends 'baseback.html.twig' %}




   {% block title %} Utilisateurs {% endblock %}

{% block body %}

    {% block table %}
        <div class="col-lg-12 grid-margin stretch-card" style="
                     flex-direction: column;
                      margin-top: 90px;">
            <h1 style="text-align: center;">Utilisateurs</h1>
            {# <button name="sweet" id="sweet">test</button> #}

            <div class="card" style=" margin-top: 20px;">
                <p class="card-description" style="text-align: center; margin-top: 30px;"> liste des utilisateurs</p>
                <div class="card-body">

                    <div class="table-responsive">
                        <a href="{{ path('add_account') }}">
                            <button type="button" class="btn btn-success btn-rounded btn-fw"> + Ajouter un compte
                            </button>
                        </a>
                        <br>
                        <br>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Cin</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Adresse</th>
                                <th>NumTel</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Langue</th>
                                <th>Modifier</th>
                                <th>supprimer</th>
                            </tr>
                            </thead>

                            {% for c in utilisateur %}
                                <tr>
                                    <td class="py-1">{{ c.id }}</td>
                                    <td>{{ c.cin }}</td>
                                    <td>{{ c.nom }}</td>
                                    <td>{{ c.prenom }}</td>
                                    <td>{{ c.adresse }}</td>
                                    <td>{{ c.numTel }}</td>
                                    <td>{{ c.email }}</td>
                                    <td>{{ c.roles|join(', ') }}</td>
                                    <td>{{ c.langue }}</td>
                                    <td>
                                        <a href="{{ path('edit_account',{'id':c.id}) }}" class="btn btn-outline-warning"
                                           onclick="return confirm('Etes-vous s没r de modifier ce compte?');"
                                           title=" Modifier">Modifier</a>
                                    </td>
                                    <td><a href="{{ path('delete_user',{'id':c.id}) }}" class="btn btn-outline-danger"
                                           onclick="return confirm('Etes-vous s没r de supprimer ce compte?');"
                                           title=" Supprimer">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(utilisateur) }}
                    </div>
                </div>
            </div>
            <div style="margin-top: 60px;">
                <h1 style="text-align: center;">Profiles</h1>


                <div class="card" style="margin-top: 20px;">


                    <p class="card-description" style="text-align: center; margin-top: 30px;"> liste des profiles</p>
                    <div class="card-body">

                        <div class="table-responsive">

                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Image</th>
                                    <th>Description</th>
                                    <th>Evaluation</th>
                                    <th>Modifier</th>
                                    <th>supprimer</th>
                                </tr>
                                </thead>

                                {% for c in profile %}
                                    <tr>
                                        <td class="py-1">{{ c.id }}</td>
                                        <td>{{ c.profile.utilisateur.nom }}</td>
                                        <td>{{ c.profile.utilisateur.prenom }}</td>
                                        <td>
                                            <img src="{{ asset('back/images/upload/profile_image/' ~ c.profile.image) }}"
                                                 alt="">
                                        </td>
                                        <td>{{ c.profile.description }}</td>
                                        <td>{{ c.profile.evaluation }}</td>
                                        <td>
                                            <a href="{{ path('edit_account',{'id':c.id}) }}"
                                               class="btn btn-outline-warning"
                                               onclick="return confirm('Etes-vous s没r de modifier ce compte?');"
                                               title=" Modifier">Modifier</a>
                                        </td>
                                        <td><a href="{{ path('delete_user',{'id':c.id}) }}"
                                               class="btn btn-outline-danger"
                                               onclick="return confirm('Etes-vous s没r de supprimer ce compte?');"
                                               title=" Supprimer">Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        <div class="navigation">
                            {{ knp_pagination_render(profile) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {# <script>
            $(document).ready(function(){
                $("#sweet").click(function(){
                    Swal.fire('Any fool can use a computer')
                   alert('teset');
                });
            })
        </script> #}
    {% endblock %}

{% endblock %}


