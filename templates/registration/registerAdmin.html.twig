{% extends 'baseback.html.twig' %}
 {% block title %}Ajouter admin{% endblock %}

{% block sidebar %}
{% endblock %}

{% block header %}
    <nav class="navbar col-lg-10 col-12 p-lg-0 fixed-top d-flex flex-row">
        <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-between">
                <img classe="logo" style="width:180px;height:40px;margin-top: 15px;" src="{{ asset('/front/images/logo-titre11.png') }}"  alt="logo"/>


            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                    data-toggle="offcanvas">
                <span class="mdi mdi-menu"></span>
            </button>
        </div>
    </nav>
{% endblock %}

  {% block body %}

      <div class="col-12 grid-margin" style="
                     flex-direction: column;
                      margin-top: 90px;">
          <div class="card">
              <div class="card-body">
                  <h4 class="card-title">Formulaire Créer Compte</h4>

                  <p class="card-description">Informations Personnelles</p>
                  <div>
                      {{ form_start(registrationForm) }}
                      <div class="row">
                          <div class="col-md-6">
                              <div class="form-group row">
                                  {{ form_errors(registrationForm.nom) }}
                                  {{ form_label(registrationForm.nom,"Nom",{ 'label_attr': {'class': 'col-sm-3 col-form-label'} }) }}
                                  {{ form_widget(registrationForm.nom, { 'attr': {'class': "form-control col-sm-9"} }) }}
                              </div>
                          </div>

                          <div class="col-md-6">
                              <div class="form-group row">
                                  {{ form_errors(registrationForm.cin) }}
                                  {{ form_label(registrationForm.cin,"Cin",{ 'label_attr': {'class': 'col-sm-3 col-form-label'} }) }}
                                  {{ form_widget(registrationForm.cin, { 'attr': {'class': "form-control  col-sm-9"} }) }}
                              </div>
                          </div>

                          <div class="col-md-6">
                              <div class="form-group row">
                                  {{ form_errors(registrationForm.prenom) }}
                                  {{ form_label(registrationForm.prenom,"Prenom",{ 'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                                  {{ form_widget(registrationForm.prenom, { 'attr': {'class': "form-control  col-sm-9"} }) }}
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group row">
                                  {{ form_errors(registrationForm.plainPassword) }}
                                  {{ form_label(registrationForm.plainPassword,"Mot De Passe",{ 'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                                  {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': "form-control  col-sm-9"} }) }}
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group row">
                                  {{ form_errors(registrationForm.email) }}
                                  {{ form_label(registrationForm.email,"Email",{ 'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                                  {{ form_widget(registrationForm.email, { 'attr': {'class': "form-control  col-sm-9"} }) }}
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group row">
                                  {{ form_errors(registrationForm.numTel) }}
                                  {{ form_label(registrationForm.numTel,"Numéro Téléphone" ,{ 'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                                  {{ form_widget(registrationForm.numTel, { 'attr': {'class': "form-control   col-sm-9"} }) }}
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group row">
                                  {{ form_errors(registrationForm.adresse) }}
                                  {{ form_label(registrationForm.adresse,"Adresse" ,{ 'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                                  {{ form_widget(registrationForm.adresse, { 'attr': {'class': "form-control   col-sm-9"} }) }}

                              </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                              <button type="submit" value="submit" class="btn btn-outline-success">S'inscrire</button>
                          </div>
                      </div>

                      {{ form_end(registrationForm) }}
                  </div>

              </div>
          </div>
      </div>

  {% endblock %}
