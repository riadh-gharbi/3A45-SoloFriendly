{% extends 'baseback.html.twig' %}


   {% block title %} profile {% endblock %}

{% block body %}

    {% block table %}<div class="col-lg-12 grid-margin stretch-card" style="
                     flex-direction: column;
                      margin-top: 70px;margin-bottom: 40px">
        <h1 style="text-align: center;">Profiles</h1>

        <div class="card">
            <p class="card-description" style="text-align: center;margin-top: 30px"> liste des profiles
            <div class="card-body">
                </p>
                <div class="table-responsive">
                    <a href="/profile/admin/ajout">
                        <button type="button"  class="btn btn-success btn-rounded btn-fw"> + Ajouter  un profile </button>
                    </a>
                    <br>
                    <br>

                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Evaluation</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Action</th>

                        </tr>
                        </thead>

                        {% for c in profile %}
                            <tr>
                                <td class="py-1">{{ c.id }}</td>
                                <td >{{ c.nom }}</td>
                                <td>{{ c.evaluation }}</td>
                                <td>{{ c.description }}</td>
                                <td><img class="survey-img mb-lg-3" src="{{ asset('back/images/upload/profile_image/' ~ c.image) }}" alt="" /></td>
                                <td> <a href="/profile/admin/delete/{{ c.id }}" class="mdi mdi-tooltip-edit" onclick="return confirm('Etes-vous sûr de modifier ce profile?');" title=" Modifier">
                                 <a href="/profile/admin/delete/{{ c.id }}" class="mdi mdi-delete" onclick="return confirm('Etes-vous sûr de supprimer ce profile?');" title=" Supprimer">
                                </td>


                            </tr>
                        {% endfor %}


                    </table>
                </div>
            </div>
        </div>
        </div>


{% endblock %}
{% endblock %}



