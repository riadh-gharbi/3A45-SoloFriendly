{% extends 'basefront.html.twig' %}
 {% block title %}Créer profile{% endblock %}

  {% block body %}

      <div class="main-panel">
          <div class="content-wrapper">
              <div class="page-header">
                  <h3 class="page-title" style="flex-direction: column;margin-top: 10px;margin-bottom: 30px">Créer un profile</h3>

              </div>

              {{ form_start(formfront) }}
              {{ form_errors(formfront.nom) }}
              {{ form_label(formfront.nom,"Nom du profile") }}
              {{ form_widget(formfront.nom, { 'attr': {'class': "form-control"} }) }}
              <hr>
              {{ form_errors(formfront.image) }}
              {{ form_label(formfront.image,"Ajouter votre photo de profile") }}
              {{ form_widget(formfront.image, { 'attr': {'class': "form-control"} }) }}
              <hr>

              {{ form_errors(formfront.description) }}
              {{ form_label(formfront.description,"Entrer votre Bio") }}
              {{ form_widget(formfront.description, { 'attr': {'class': "form-control"} }) }}
              <hr>

              {{ form_errors(formfront.evaluation) }}
              {{ form_label(formfront.evaluation,"Evaluer le profile") }}
              {{ form_widget(formfront.evaluation, {label_attr: {class: 'checkbox-custom'} }) }}

              {# {{ form_widget(form.region, { 'attr': {'class': "form-control"} }) }} #}
              <br><br>

              {{ form_row(formfront.Creer, { 'attr': {'class': "btn btn-primary mr-2"} }) }}

              {{ form_end(formfront) }}

          </div>
      </div>
  {% endblock %}



