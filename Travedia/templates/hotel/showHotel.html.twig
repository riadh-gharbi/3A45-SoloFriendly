{% extends 'baseback.html.twig' %}
{% block title %}Ajouter Hotel
{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"></h3>
                <nav aria-label="breadcrumb">
                </nav>
            </div>
            <div id="layoutSidenav_content">

                <div class="container-fluid">
                    <div class="card-body">
                        <div class="table-responsive">




                        </div>
                        <div class="col-lg-16 stretch-card">
                            <div class="card">

                            <div class="card-body">

                                <h4 class="card-title">Liste des Hotel</h4>

                                <div
                                        class="table-responsive">


                                    {# <table class="table table-hover" > #}
                                    <table class="table table-bordered">

                                        <thead>


                                        <tr class="table-info">

                                            <th>
                                                Id
                                            </th>


                                            <th>
                                                Nom
                                            </th>
                                            <th>
                                                Adresse
                                            </th>
                                            <th>
                                                Email
                                            </th>
                                            <th>
                                                NumTel
                                            </th>

                                        </thead>

                                        <tbody id="tab">
                                        {% for hotels in hotel %}


                                            <td>{{ hotels.id }}</td>






                                            <td>{{ hotels.Nom }}</td>

                                            <td>{{ hotels.adresse }}</td>


                                            <td>{{ hotels.Email }}</td>



                                            <td>{{ hotels.NumTel }}</td>





                                            <td>
                                                <div align="right">

                                                    <a href="{{ path('hotel_edit', {'id':hotels.id}) }}" class="mdi mdi-tooltip-edit" name='edit' title=" modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="{{ path('hotel_del',{'id':hotels.id}) }}" class="mdi mdi-delete" onclick="return confirm('Etes-vous sÃ»r de supprimer cette destination?');" title=" supprimer">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>

                                                </div>
                                            </td>
                                            </tr>


                                        {% endfor %}
                                        </tbody>

                                    </table>

                                    <p align="center">
                                        {{ knp_pagination_render(hotel) }}
                                    </p>


                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

                            </div>


{% endblock %}
