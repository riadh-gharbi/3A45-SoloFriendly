{% extends 'basefront.html.twig' %}

{% block body %}

            <div class="col-lg-12 grid-margin card">
                <div class="card">


                    <div class="card-body" style="margin: auto ">
                        <h4 class="card-title">Table Paiement</h4>

                        <div class=" table-responsive" >
                            <table class="table table-striped table-hover " style="margin-top: 100px; overflow-x: auto">
                                <thead>
                                <tr>
                                    <td style="word-break:break-all">Id</td>
                                    <td style="word-break:break-all">Prix</td>
                                    <td style="word-break:break-all">Statut</td>
                                    <td style="word-break:break-all">Date Cr√©ation</td>
                                    <td style="word-break:break-all">Date Paiement</td>
                                    <td style="word-break:break-all">Type Paiement</td>
                                    <td style="word-break:break-all">Guide ID</td>
                                    <td style="word-break:break-all">Client ID</td>
                                    <td style="word-break:break-all">Planning</td>
                                    <td> Actions</td>
                                </tr>

                                </thead>
                                <tbody>

                                <tr  style="vertical-align: middle" >
                                    <td style="word-break:break-all">{{ paiement.id }}</td>
                                    <td style="word-break:break-all">{{ paiement.prix }} </td>
                                    <td style="word-break:break-all">{{ paiement.statut }} </td>
                                    <td style="word-break:break-all">{{ paiement.dateCreation|date('Y-m-d') }} </td>
                                    <td style="word-break:break-all">{{ paiement.datePaiement|date('Y-m-d') }} </td>
                                    <td style="word-break:break-all">{{ paiement.typePaiement }} </td>
                                    <td style="word-break:break-all">{{ paiement.owner.nom}} {{ paiement.owner.prenom }}</td>
                                    <td style="word-break:break-all">{{ paiement.client.nom }} {{ paiement.client.prenom}}  </td>
                                    <td style="word-break:break-all"><a href="{{ path('detailsPlanning' , {'id':paiement.planning.id}) }}">{{ paiement.planning.id }}</a> </td>

                                    <td>
                                        <div class="list-group-item btn-group-vertical" role="group">
                                            <a class="btn-sm btn-success btn-block " href="{{ path('supprimerFacture',{'id':paiement.id}) }}">Supprimer</a>
                                            <a class="btn-sm btn-success btn-block"  href="{{ path('modifierFactureFront',{'id':paiement.id}) }}">Modifier</a>
                                        </div>
                                    </td>



                                </tr>
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>

{% endblock %}