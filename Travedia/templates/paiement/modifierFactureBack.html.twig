{% extends 'baseback.html.twig' %}

{% block body %}

    <div class="main-panel ">
        <div class="content-wrapper ">
            <div class="row ">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">


                        <div class="card-body" style="margin: auto ">
                            <h4 class="card-title">Modifier Facture</h4>
                        </div>

                        <div class="form-group" style="margin: auto" >
                            {{ form_start(form ,  {'attr' : {'novalidate': 'novalidate'}}) }}


                            {{ form_row(form.typePaiement ,{'attr':{ 'class': 'form-control' }}) }}
                            <div  class="flatpickr-calendar">
                            {{ form_row(form.dateCreation ,{'attr':{ 'class': 'flatpickr-calendar' }}) }}
                            </div>
                            <div class="flatpickr-calendar">
                                {{ form_row(form.datePaiement ,{'attr':{ 'class': 'flatpickr-calendar' }}) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}